{
  "version": 1,
  "project_type": "code",
  "queue": {
    "file": ".ralph/queue.json",
    "done_file": ".ralph/done.json",
    "id_prefix": "RQ",
    "id_width": 4
  },
  "agent": {
    "runner": "opencode",
    "model": "zgoogle/gemini-3-flash-preview",
    "phases": 3,
    "iterations": 1,
    "reasoning_effort": "high",
    "codex_bin": "codex",
    "opencode_bin": "opencode",
    "gemini_bin": "gemini",
    "claude_bin": "claude",
    "cursor_bin": "agent",
    "runner_cli": {
      "defaults": {
        "output_format": "stream_json",
        "verbosity": "normal",
        "approval_mode": "yolo",
        "sandbox": "default",
        "plan_mode": "default",
        "unsupported_option_policy": "warn"
      },
      "runners": {
        "codex": {
          "sandbox": "disabled"
        },
        "claude": {
          "verbosity": "verbose"
        }
      }
    },
    "instruction_files": [
      "~/.codex/AGENTS.md"
    ],
    "repoprompt_plan_required": true,
    "repoprompt_tool_injection": true,
    "ci_gate_command": "make ci",
    "ci_gate_enabled": true,
    "git_commit_push_enabled": true,
    "git_revert_mode": "ask",
    "update_task_before_run": true
  }
}